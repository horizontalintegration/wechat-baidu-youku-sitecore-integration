<form id="mainform" method="post" runat="server">
    <div id="MainPanel">
        <div id="CenterColumn">
            <div id="InnerCenter">
                <div id="Header">
                    <img src="-/media/Default Website/sc_logo.ashx" alt="Sitecore" id="scLogo" />
                </div>
                <div id="Content">
                    <div id="LeftContent">
                        <div>
                            <h1 class="contentTitle">
                                @Sitecore.Context.Item["Title"]
                            </h1>
                            <div class="contentDescription">
                                @Html.Sitecore().Field("Text")
                            </div>
                        </div>
                    </div>
                </div>
                <div id="Footer"><hr class="divider" />&#169; @(Sitecore.DateUtil.ToServerTime(DateTime.UtcNow).Year.ToString()) Sitecore</div>
            </div>
        </div>
    </div>
</form>